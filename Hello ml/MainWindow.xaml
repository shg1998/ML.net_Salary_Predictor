<Window x:Class="Hello_ml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_ml"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel Background="AntiqueWhite">
        <TextBlock Text="Enter Your Years Experirence to calculate Salary For You!" Margin="100" HorizontalAlignment="Center" FontSize="20" FontStyle="Italic"/>
        <TextBox Name="salarytextbox" Height="30" TextAlignment="Center" Margin="50 0" FontSize="18"/>
        <Button Width="100" Height="30" Content="Predict Salary!" Click="Button_Click" Margin="20"/>
        <TextBlock Name="PredictionTextBlock" Margin="30" Text="Waiting for Result..." FontWeight="Bold" FontSize="12" />
    </StackPanel>
</Window>
